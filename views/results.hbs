<div class="header">
      <img src="/img/google.png" alt="Google Logo" />
      <form class="resform"  action="/results" method="POST">
        <input class="searchbar" type="search" name="searchterm"/>
        <button>Search</button>
      </form>
    </div>
    <div class="content">
      <div class="numres">
        <p>{{results.length}} Results</p>
      {{#if results.length}}
      </div>
      {{#each results as |e|}}
      {{> result result=e}}
      {{/each}}
          {{else}}
      <span>No results to these terms</span>
     {{/if}}
    </div>